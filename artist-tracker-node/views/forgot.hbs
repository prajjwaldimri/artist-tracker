<!DOCTYPE HTML>
<html>

<head>
  {{> head}}
</head>

<body>
  {{> navbar}}

  <div class="row">
    <div class="col s12 m4 offset-m4">
      <div class="card blue-grey darken-3 z-depth-3" style="margin-top: 8%">
        <div class="card-content">
          <span class="card-title white-text">Forgot Your Password?</span>{{!-- Login Form --}}
          <div id="login">
            <div class="row">
              <form class="col s10 offset-s1" action="/account/forgot" method="post">
                <div class="row">
                  <div class="input-field white-text">
                    <input name="email" id="email" type="email" class="validate" required>
                    <label for="email">Registered Email Address</label>
                  </div>
                </div>

                <div class="row center">
                  <div class="input-field">
                    <button class="btn waves-effect waves-light indigo" type="submit" name="action">Send Reset Token <i class="material-icons right">send</i>
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  {{> footer}} {{> toast}}

</body>

</html>
