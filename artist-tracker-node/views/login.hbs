<html lang="en">

<head>
  {{> head}}
</head>

<body>
  {{> navbar}}

  <div class="row">
    <div class="col s8 m4 offset-s2 offset-m4">
      <div class="card medium blue-grey darken-3 z-depth-3" style="margin-top: 10%">
        <div class="card-content white-text">
          <span class="card-title center" style="font-weight: bold">MEMBER LOGIN</span>
        </div>
        <div class="row">
          <form class="col s8 offset-s2" action="/login" method="post">
            <div class="row">
              <div class="input-field white-text">
                <input name="username" id="username" type="text" class="validate" required>
                <label for="username">Username</label>
              </div>
            </div>

            <div class="row">
              <div class="input-field white-text">
                <input name="password" id="password" type="password" class="validate" required>
                <label for="password">Password</label>
              </div>
            </div>

            <div class="row center">
              <div class="input-field">
                <button class="btn waves-effect waves-light indigo" type="submit" name="action">Submit <i class="material-icons right">send</i>
                </button>
              </div>
            </div>
          </form>
        </div>

        <div class="card-action center">
          <a href="#" style="margin-right: 0px">Forgot Password?</a>
        </div>
      </div>
    </div>
  </div>


  {{> footer}}


  <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
  <script type="text/javascript" src="/js/materialize.min.js"></script>
  <script type="text/javascript" src="/js/login.js"></script>

  {{> toast}}

</body>

</html>
