<html lang="en">

<head>
  {{> head}}
</head>

<body>
  {{> navbar}}

  <div class="row">
    <div class="col s12 m4 offset-m4">
      <div class="card blue-grey darken-3 z-depth-3" style="margin-top: 8%">
        <div class="card-tabs">
          <ul class="tabs tabs-fixed-width tabs-transparent">
            <li class="tab"><a class="active" href="#login">Login</a></li>
            <li class="tab"><a href="#signup">Register</a></li>
          </ul>
        </div>
        <div class="card-content" style="margin-top: 10%">
          {{!-- Login Form --}}
          <div id="login">
            <div class="row">
              <form class="col s10 offset-s1" action="/login" method="post">
                <div class="row">
                  <div class="input-field white-text">
                    <input name="username" id="username" type="text" class="validate" required>
                    <label for="username">Username</label>
                  </div>
                </div>

                <div class="row">
                  <div class="input-field white-text">
                    <input name="password" id="password" type="password" class="validate" required>
                    <label for="password">Password</label>
                  </div>
                </div>

                <div class="row center">
                  <div class="input-field">
                    <button class="btn waves-effect waves-light indigo" type="submit" name="action">LogIn <i class="material-icons right">send</i>
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
          {{!-- Signup Form --}}
          <div id="signup">
            <div class="row">
              <form class="col s10 offset-s1" action="/signup" method="post" name="signup-form">
                <div class="row">
                  <div class="input-field white-text">
                    <input name="username" id="signup_username" type="text" class="validate" required>
                    <label for="signup_username">Username</label>
                  </div>
                </div>

                <div class="row">
                  <div class="input-field white-text">
                    <input name="email" id="email" type="email" class="validate">
                    <label for="email">Email</label>
                  </div>
                </div>

                <div class="row">
                  <div class="input-field white-text">
                    <input name="password" id="signup_password" type="password" class="validate" required>
                    <label for="signup_password">Password</label>
                  </div>
                </div>

                <div class="row">
                  <div class="input-field white-text">
                    <input name="password-confirm" id="password-confirm" type="password" class="validate" required>
                    <label for="password-confirm">Confirm Password</label>
                  </div>
                </div>

                <div class="row center">
                  <div class="input-field">
                    <button class="btn waves-effect waves-light indigo" type="submit" name="action">Register <i class="material-icons right">send</i>
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>

        <div class="card-action center">
          <a href="/account/forgot" style="margin-right: 0px">Forgot Password?</a>
        </div>

      </div>
    </div>
  </div>


  {{> footer}}


  <script type="text/javascript" src="/js/login.js"></script>
  <script type="text/javascript" src="/js/validate.min.js"></script>
  <script type="text/javascript">
    // Validator JS
    var validator = new FormValidator(
        'signup-form', [] {
          name: 'password-confirm',
          display: 'confirm password',
          rules: 'matches[password]'
        }],
      function(errors, event) {
        if (errors.length > 0) {
          errors.forEach(function(error) {
            Materialize.toast(error.message, 4000, 'red');
          });
        }
      }
    );
  </script>

  {{> toast}}

</body>

</html>
